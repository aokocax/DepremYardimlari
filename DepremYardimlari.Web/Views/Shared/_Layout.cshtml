<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DepremYardimlari.org</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Türkiyede faaliyet göstereen şirketlerin depremzedeler için ne kadar bağış yaptığını listeleyen web sitesi." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.png">

    <!-- App css -->

    <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="loading" data-layout-mode="horizontal" data-layout-color="dark" data-layout-size="fluid" data-topbar-color="dark" data-leftbar-position="fixed">
    <!-- Begin page -->
    <div id="wrapper">
        @{
            Html.RenderPartial("_header"); 
        }
        @RenderBody()
        @{
            Html.RenderPartial("_footer");
        }
    </div>
  
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/assets/libs/node-waves/waves.min.js"></script>
    <script src="/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="/assets/libs/feather-icons/feather.min.js"></script>

    <!-- knob plugin -->
    <script src="/assets/libs/jquery-knob/jquery.knob.min.js"></script>

     <script src="/assets/libs/raphael/raphael.min.js"></script>

    <!-- Dashboar init js-->
    <script src="/assets/js/pages/dashboard.init.js"></script>

    <!-- App js-->
    <script src="/assets/js/app.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Vendor -->
    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-792503-85"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-792503-85');
</script>

</body>
</html>
