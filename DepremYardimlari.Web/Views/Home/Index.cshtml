@{
    ViewData["Title"] = "Depremzedeler için hangi firmaların ne kadar bağış yapacağını listeleyen websitesi?";
    var aids = ((List<Aid>)ViewBag.Data);
    var totalAid = ViewBag.TotalAid;

}
@{

}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="card-bodyquote mb-0">
                            <p class="text-white text-black">
                                6 Şubat 2023 tarihinde ülkemizde meydana gelen deprem felaketinin ardından
                                1.000.000 TL ve üzerinde yardım taahhütünde bulunan şirketleri kategorik olarak listelemek için açılmıştır.

                                Gördüğünüz hataları ve yeni taahhütleri iletişim bölümünden bize iletebilirsiniz.

                            </p>
                            <footer class="blockquote-footer text-muted">
                                depremyardimlari.org
                            </footer>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="row mt-4">

                <div class="col-xl-12 ">
                    <div class="card">
                        <div class="card-body">
                            <div class="dropdown float-end">
                                @* <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-vertical"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                    </div>*@
                            </div>

                            <h4 class="header-title mt-0 mb-3">Deprem Yardımı Yapan Markalar | Toplam Bağıs = @totalAid.ToString("#,##0") </h4>

                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Marka Adı</th>
                                            <th>Sektör</th>
                                            <th>Yardım Türü</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                            <th>Kaynak</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var i = 1;
                                            foreach (var item in aids.OrderByDescending(p => p.Tutar))
                                            {
                                                <tr>
                                                    <td>@(i++)</td>
                                                    <td><a href="">@item.Marka</a></td>
                                                    <td>@item.Sektor</td>
                                                    <td>@item.Tur</td>
                                                    <td><strong style="color:white">@item.Tutar.ToString("#,##0")</strong> @item.Birim</td>
                                                    <td>Taahhüt</td>
                                                    <td>
                                                        @{
                                                            if (!string.IsNullOrEmpty(item.Kaynak))
                                                            {
                                                                if (item.Kaynak.IndexOf("http") != -1)
                                                                {
                                                                    <a href="@item.Kaynak" target="_blank">Bağlantı</a>
                                                                }
                                                                else
                                                                {
                                                                    <text>@item.Kaynak</text>
                                                                }
                                                            }

                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        }




                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div><!-- end col -->

            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>

